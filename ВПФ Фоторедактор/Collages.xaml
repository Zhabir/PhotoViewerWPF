        </Border>
        <Border Name ="Border3" BorderBrush="Black" BorderThickness="1" Margin="455,10,0,0" RenderTransformOrigin="0.495,0.482" Height="370" VerticalAlignment="Top" HorizontalAlignment="Left" Width="475" Visibility="Hidden">
            <Image Name ="image3" Stretch="UniformToFill"/>
        </Border>
        <Border Name ="Border4" BorderBrush="Black" BorderThickness="1" Margin="158,385,0,10" RenderTransformOrigin="0.495,0.482" HorizontalAlignment="Left" Width="629" Visibility="Hidden">
