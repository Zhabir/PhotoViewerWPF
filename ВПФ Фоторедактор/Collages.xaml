        </Border>
        <Border Name ="Border5" BorderBrush="Black" BorderThickness="1" Margin="10,385,0,10" RenderTransformOrigin="0.495,0.482" HorizontalAlignment="Left" Width="440" Visibility="Hidden">
            <Image Name ="image5" Stretch="UniformToFill"/>
        </Border>
        <Border Name ="Border6" BorderBrush="Black" BorderThickness="1" Margin="455,385,0,10" RenderTransformOrigin="0.495,0.482" HorizontalAlignment="Left" Width="475" Visibility="Hidden">
            <Image Name ="image6" Margin="0,0,3,-1" Stretch="UniformToFill"/>
        </Border>
        <Border Name ="Border7" BorderBrush="Black" BorderThickness="1" Margin="10,10,0,20" RenderTransformOrigin="0.495,0.482" HorizontalAlignment="Left" Width="485" Visibility="Hidden">
            <Image Name ="image7" Stretch="UniformToFill" Margin="0,0,-2,0"/>
