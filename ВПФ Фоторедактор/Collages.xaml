        <Button Name="buttonClose" Content="Exit" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Padding="20,5" Margin="10,190,10,10" Height="28" Width="120" Click="buttonExit_Click"/>
        <Border Name ="Border1" BorderBrush="Black" BorderThickness="1" Visibility="Hidden"/>
        <Border Name ="Border2" BorderBrush="Black" BorderThickness="1" Margin="10,10,0,0" RenderTransformOrigin="0.495,0.482" HorizontalAlignment="Left" Width="440" Height="370" VerticalAlignment="Top" Visibility="Hidden">
