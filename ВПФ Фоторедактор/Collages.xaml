        <Border Name ="Border8" BorderBrush="Black" BorderThickness="1" Margin="500,10,0,20" RenderTransformOrigin="0.495,0.482" HorizontalAlignment="Left" Width="458" Visibility="Hidden">
            <Image Name ="image8" Stretch="UniformToFill" Margin="0,0,0,-2"/>
        </Border>

    </Grid>
</Window>
